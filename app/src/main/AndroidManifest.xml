<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.wintermute.gmassistant">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:usesCleartextTraffic="true"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.wintermute.gmassistant.configurator.LightConfiguration"></activity>
        <activity android:name="com.wintermute.gmassistant.configurator.SceneConfiguration" />
        <activity android:name="com.wintermute.gmassistant.client.NewPlaylist" />
        <activity android:name="com.wintermute.gmassistant.handler.PlayerHandler" />
        <activity android:name="com.wintermute.gmassistant.client.FileBrowser" />
        <activity android:name="com.wintermute.gmassistant.GmPanel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.wintermute.gmassistant.services.player.BasePlayerService" />
        <service android:name="com.wintermute.gmassistant.services.player.BackgroundMusic" />
        <service android:name="com.wintermute.gmassistant.services.player.AmbientSound" />
        <service android:name="com.wintermute.gmassistant.services.player.JumpScareSound" />
    </application>

</manifest>