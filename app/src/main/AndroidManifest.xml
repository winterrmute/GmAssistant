<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.wintermute.gmassistant">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".client.panel.LibraryContent"></activity>
        <activity
                android:name=".dialogs.ListDialog"
                android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".client.panel.ScenePanel" />
        <activity android:name=".client.panel.LightPanel" />
        <activity android:name=".config.LightConfig" />
        <activity android:name=".config.SceneConfig" />
        <activity android:name=".client.AddNewPlaylist" />
        <activity android:name=".client.panel.PlaylistContentPanel" />
        <activity android:name=".client.FileBrowser" />
        <activity android:name=".client.panel.PlaylistPanel" />
        <activity android:name=".GmAssistant">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.player.BasePlayerService" />
        <service android:name=".services.player.MusicPlayerService" />
        <service android:name=".services.player.AmbiencePlayerService" />
        <service android:name=".services.player.EffectPlayerService" />
        <service android:name=".services.player.AudioPlayer" />


        <receiver android:name=".services.notifications.MusicPlayerReceiver" />
        <receiver android:name=".services.notifications.AmbiencePlayerReceiver" />
    </application>

</manifest>