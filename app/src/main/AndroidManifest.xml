<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.wintermute.soundboard">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:usesCleartextTraffic="true"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".configurator.LightConfiguration"></activity>
        <activity android:name=".configurator.SceneConfiguration" />
        <activity android:name=".client.NewPlaylist" />
        <activity android:name=".handler.PlayerHandler" />
        <activity android:name=".client.FileBrowser" />
        <activity android:name=".Soundboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.player.BackgroundMusic" />
        <service android:name=".services.player.AmbientSound" />
        <service android:name=".services.player.JumpScareSound" />
    </application>

</manifest>